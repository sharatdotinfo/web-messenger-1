<!doctype html>
<html lang="en">
  <head>
    <title>Adventure Corporation Chat</title>
    
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-beta.2/css/bootstrap.min.css" integrity="sha384-PsH8R72JQ3SOdhVi3uxftmaW6Vc51MKb0q5P2rRUpPvrszuE4W1povHYgTpBfshb" crossorigin="anonymous">
    <link rel="stylesheet" type="text/css" href="./stylesheets/style.css">
  </head>
  <body>
    <nav class="navbar navbar-inverse navbar-fixed-top">
      <img src="https://soupiest-flashlight.000webhostapp.com/hockey.png" style="width:60px; height: 40px;" >
      <!-- <div id="headerForName" class="col-md-4 col-md-offset-4 mx-auto" >
          <form id="headerForm" class="form-inline">
            <input id="n" class="form-control mr-sm-2" type="search" placeholder="Enter handle" aria-label="Search">
            <button id="btn" class="btn btn-outline-primary my-2 my-sm-0" >Submit</button>
          </form>
      </div> -->
      <div id="companyName" class="mx-auto">
        <h2>Adventure Corporation</h2>
      </div>
    </nav>
    <div class="container">
      <div class="row" style="padding-top: 25px;">
        <div class="col-4 col-md-3">
          <div class="controls">
            <h3 id="usersList">Online users in Lobby</h3>
            <ul class="list-group" id="users"></ul>
          </div>
          <br>
          <div class="controls">
            <h3 id="roomList">Rooms</h3>
            <button id="room" type="button" class="btn btn-primary" data-toggle="modal" data-target="#myModal">Create a room</button>
            <div id="rooms">
            </div>
          </div>
          <div class="modal fade" id="myModal">
          <div class="modal-dialog">
            <div class="modal-content">

              <!-- Modal Header -->
              <div class="modal-header">
                <h4 class="modal-title">Please enter a name for your new room</h4>
                <button type="button" class="close" data-dismiss="modal">&times;</button>
              </div>

              <!-- Modal body -->
              <div class="modal-body">
                <form id="newRoom">
                  <div class="form-group row">
                    <label for="roomName" class="col-2 col-form-label">Room Name</label>
                    <div class="col-10">
                      <input class="form-control" type="text" value="Room name" id="roomName">
                    </div>
                  </div>
                  <button type = "submit" class="btn btn-primary">Create</button>
                </form>
              </div>

              <!-- Modal footer -->
              <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
              </div>

            </div>
          </div>
        </div>
        </div>

        <div class="col-5 col-md-6">
          <iframe src="https://www.wikipedia.org" id="browser" style="width:100%; height:100%;" >
          </iframe>
          <ul id="messages">
            <button id="fork">Fork</button>
          </ul>
        </div>
        <div class="col-3 col-md-3 sidebar-offcanvas" id="sidebar" style="padding-top: 25px;">
          <input id="m1" class="form-control mr-sm-2" type="search" style="width:80%;"
                placeholder="Enter URL" aria-label="Load">
          <button id="btn1" class="btn btn-outline-primary my-2 my-sm-0" type="submit">Load</button>
          <br><br>
          <div class="list-group">
            <a href="#" class="list-group-item active">Bitcoin News</a>
            <a href="#" class="list-group-item">Ethereum News</a>
            <a href="#" class="list-group-item">Litecoin News</a>
            <a href="#" class="list-group-item">Ripple News</a>
            <a href="#" class="list-group-item">BTC News</a>
            <a href="#" class="list-group-item">Monero News</a>
          </div>
        </div>
      </div>
    </div>
    <script src="/socket.io/socket.io.js"></script>
    <script src="https://code.jquery.com/jquery-1.11.1.js"></script>
    <footer class="navbar-inverse fixed-bottom">
      <div class="col-md-4 col-md-offset-4 mx-auto" >
        <form id="footerForm" class="form-inline" >
          <span id="username"><%= user.username %></span>:  
          <input id="m" class="form-control mr-sm-2" type="search" placeholder="Enter text ..." aria-label="Search">
          <button class="btn btn-outline-primary my-2 my-sm-0" type="submit">Submit</button>
        </form>

      </div>
    </footer>
    <script type="text/javascript" src="./scripts/chat.js"></script>
    <script src="https://code.jquery.com/jquery-3.1.1.slim.min.js" integrity="sha384-A7FZj7v+d/sdmMqp/nOQwliLvUsJfDHW+k9Omg/a/EheAdgtzNs3hpfag6Ed950n" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/tether/1.4.0/js/tether.min.js" integrity="sha384-DztdAPBWPRXSA/3eYEEUWrWCy7G5KFbe8fFjk5JAIxUYHKkDx6Qin1DkWx51bBrb" crossorigin="anonymous"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-alpha.6/js/bootstrap.min.js" integrity="sha384-vBWWzlZJ8ea9aCX4pEW3rVHjgjt7zpkNpZk+02D9phzyeVkE+jo0ieGizqPLForn" crossorigin="anonymous"></script>
  </body>
</html>
